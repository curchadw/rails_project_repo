<h1>Sign Up</h1>
<%= form_with model: @user do |f|%>
  <%= f.label :username %><br>
  <%= f.text_field :username, required: true %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, required: true %><br>
  <%= f.label(:admin, "Admin") %>
  <%= f.check_box(:admin, id: "user_admin") %>
  <%= f.submit %>
<% end %>