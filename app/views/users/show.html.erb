<div class= 'container usershow'>
<% flash.each do |type, msg| %>
  <div>
    <h4><li style="color:green;"><%= msg %></li></h4>
  </div>

<% end %>


<div class='content'>
<h2>Welcome to Flight Scheduler</h2>

<% if logged_in %>
    <h2>You are logged in as <%= current_user.username %></h2>
<%end%>

<h3><%= link_to "Create New Flight", new_flight_path(current_user) %></h3>
<h3><%= link_to "Meet your pilots", user_pilots_path(current_user) %></h3>
<h3><%= link_to "See what cities we are currently servicing", destinations_path(current_user)%></h3>
<h3><%= link_to "Current Flight(s)", flights_path(current_user)%></h3>
<h3><%= link_to "Top Pilot", most_pilot_path(current_user) %></h3>
<div>

<%= link_to "Log Out", "/session", method: :delete %> | <% if current_user.admin%> <%= link_to "Admin Use Only" , users_path %> <% end %>
</div>

</div>