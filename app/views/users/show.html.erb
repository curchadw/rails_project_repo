<div>
<%= form_tag(flights_path method: :get) do %>
  Flight Number: <%= text_field_tag :flight_number, params[:flight_number] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
</div>


<h1>Welcome to Flight Scheduler</h1>

<% if logged_in %>
    <h2>You are Logged In, <%= current_user.username %></h2>
<%end%>

<h3><%= link_to "Create New Flight", new_flight_path %></h3>
<h3><%= link_to "Meet your pilots", pilots_path %></h3>
<h3><%= link_to "See what cities we are currently servicing", destinations_path %></h3>
<div>
<h3>Current Flights:</h3>
<ol>
<%= @flights.each do |flight| %>
<li><%= link_to "#{flight.flight_number}", flight_path %></li>
<% end %>
</ol>
</div>
<%= link_to "Log Out", "/session", method: :delete %>