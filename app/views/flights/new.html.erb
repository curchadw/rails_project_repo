<%= form_with model: @flight do |f| %>

<ul>
<% flash.each do |type, msg| %>
  <div>
    <li style="color:red;"><%= msg %></li>
  </div>

<% end %>
</ul>

<div>
Create a Flight:
<%= f.label :flight_number %>
<%= f.text_field :flight_number %>
</div><br>
<div>
Assign Pilot:
<%= f.collection_select(:pilot_id, Pilot.all, :id, :name, :prompt => "Please Select a Pilot") %>
</div><br>




<div>
Choose Destination:
<%= f.collection_select(:destination_id, Destination.all, :id, :name, :prompt => "Please Select a Destination City") %>
</div><br>

<div>
Add Passengers:
<ol>
<%= f.fields_for :passengers do |passenger|%>
    <li>
        <%= passenger.label :name%>
        <%= passenger.text_field :name%>
    </li>
    

<% end %>
</ol>
</div>
<%= f.submit 'Create Flight' %>

<% end %>
<%= link_to 'Back', flights_path(current_user) %>