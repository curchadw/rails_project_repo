
<div class='container flightsshow'>
<h3>Current Flights:</h3>
<div>
<h3>International Destination Flights:</h3>
<ol>
<% @flights.each do |flight| %>
  <% if current_user.admin %>
  <li><h3><strong><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></strong> | <%= link_to 'Edit', edit_flight_path(current_user, flight) %> |  <%= link_to 'Delete',flight_path(current_user, flight), method: :delete %></h3></li>
  <% else %>
  <li><h3><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></h3></li> 
  <% end %>
<% end %>
</ol>
</div>

<div>
<h3>Domestic Destination Flights:</h3>
<ol>
<% @dom_flights.each do |flight| %>
  <% if current_user.admin %>
  <li><h3><strong><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></strong> | <%= link_to 'Edit', edit_flight_path(current_user, flight) %> |  <%= link_to 'Delete',flight_path(current_user, flight), method: :delete %></h3></li>
  <% else %>
  <li><h3><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></h3></li> 
  <% end %>
<% end %>
</ol>
</div>
<%= link_to 'Back', user_path(current_user) %>
</div>