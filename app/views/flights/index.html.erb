

<h3>Current Flights:</h3>
<div>
International Destination Flights:
<ol>
<% @flights.each do |flight| %>
  <% if current_user.admin %>
  <li><strong><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></strong> | <%= link_to 'Edit', edit_flight_path(current_user, flight) %> |  <%= link_to 'Delete',flight_path(current_user, flight), method: :delete %></li>
  <% else %>
  <li><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></li> 
  <% end %>
<% end %>
</ol>
</div>

<div>
Domestic Destination Flights:
<ol>
<% @dom_flights.each do |flight| %>
  <% if current_user.admin %>
  <li><strong><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></strong> | <%= link_to 'Edit', edit_flight_path(current_user, flight) %> |  <%= link_to 'Delete',flight_path(current_user, flight), method: :delete %></li>
  <% else %>
  <li><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= flight.destination.name %></li> 
  <% end %>
<% end %>
</ol>
</div>
<%= link_to 'Back', user_path(current_user) %>