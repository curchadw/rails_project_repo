<div>
<%= form_tag flights_path :method => "get" do %>
    <%= label_tag(:search, "Which flight are you looking for?") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag 'Search', name: nil %>
<% end %>
</div>

<h3>Current Flights:</h3>
<div>
<ol>
<% @flights.each do |flight| %>
  <% if current_user.admin %>
  <li><%= link_to flight.flight_number, flight_path(current_user, flight) %> | <%= link_to 'Edit', edit_flight_path(current_user, flight) %> |  <%= link_to 'Delete',flight_path(current_user, flight), method: :delete %></li>
  <% else %>
  <li><%= link_to flight.flight_number, flight_path(current_user, flight) %></li> 
  <% end %>
<% end %>
</ol>
</div>
<%= link_to 'Back', user_path(current_user) %>