<div class='container destshow'>
<div>
<h2>Destination</h2>
<div>
    <h3><%= @destination.name %></h3>
</div>
<div>
Current flights to this destination:
<ul>
<% @destination.flights.each do |flt| %>
<% if current_user.admin%>
<li>Flight Num: <%= link_to flt.flight_number, flight_path(current_user, flt) %> | <%= link_to 'Edit', edit_flight_path(current_user, flt) %> |  <%= link_to 'Delete',flight_path(current_user, flt), method: :delete %></li>
<% else %>
<li>Flight Num: <%= link_to flt.flight_number, flight_path(current_user, flt) %></li>
<% end %>
<% end %>
</ul>
</div>
</div>
<div class='back_link'>
<p><%= link_to 'Back', user_destinations_path %></p>
</div>
</div>